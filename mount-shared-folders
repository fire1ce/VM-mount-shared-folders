#!/bin/bash

vmware-hgfsclient | while read folder; do
  echo "[i] Mounting ${folder}   (/root/sharedFolder/${folder})"
  mkdir -p "/root/sharedFolder/${folder}"
  umount -f "/root/sharedFolder/${folder}" 2>/dev/null
  vmhgfs-fuse -o allow_other -o auto_unmount ".host:/${folder}" "/root/sharedFolder/${folder}"
done

sleep 2s
